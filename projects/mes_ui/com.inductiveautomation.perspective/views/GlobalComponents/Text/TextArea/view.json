{
  "custom": {},
  "params": {
    "placeholder": "value",
    "text": "value",
    "type": "value"
  },
  "propConfig": {
    "params.placeholder": {
      "paramDirection": "input",
      "persistent": true
    },
    "params.text": {
      "paramDirection": "input",
      "persistent": true
    },
    "params.type": {
      "paramDirection": "input",
      "persistent": true
    }
  },
  "props": {
    "defaultSize": {
      "height": 149,
      "width": 363
    }
  },
  "root": {
    "children": [
      {
        "meta": {
          "name": "TextArea"
        },
        "position": {
          "basis": "160px"
        },
        "propConfig": {
          "props.style.classes": {
            "binding": {
              "config": {
                "path": "view.params.type"
              },
              "transforms": [
                {
                  "fallback": "TextFields/TextArea",
                  "inputType": "scalar",
                  "mappings": [
                    {
                      "input": "success",
                      "output": "TextFields/Text TextFields/TextSuccess"
                    },
                    {
                      "input": "warning",
                      "output": "TextFields/Text TextFields/TextWarning"
                    },
                    {
                      "input": "fail",
                      "output": "TextFields/Text TextFields/TextFailure"
                    }
                  ],
                  "outputType": "scalar",
                  "type": "map"
                }
              ],
              "type": "property"
            }
          },
          "props.text": {
            "binding": {
              "config": {
                "path": "view.params.text"
              },
              "type": "property"
            }
          }
        },
        "props": {
          "style": {}
        },
        "type": "ia.input.text-area"
      }
    ],
    "meta": {
      "name": "root"
    },
    "props": {
      "direction": "column"
    },
    "type": "ia.container.flex"
  }
}