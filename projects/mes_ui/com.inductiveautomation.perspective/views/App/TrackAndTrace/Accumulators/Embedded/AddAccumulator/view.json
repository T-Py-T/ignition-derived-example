{
  "custom": {
    "InventoryName": "",
    "SiteId": 6
  },
  "params": {
    "ModalName": "value"
  },
  "propConfig": {
    "custom.InventoryName": {
      "binding": {
        "config": {
          "path": "/root/Label/Input/Content/TextField.props.text"
        },
        "type": "property"
      },
      "persistent": true
    },
    "custom.SiteId": {
      "binding": {
        "config": {
          "path": "session.custom.SelectedSite"
        },
        "type": "property"
      },
      "persistent": true
    },
    "params.ModalName": {
      "paramDirection": "input",
      "persistent": true
    }
  },
  "props": {
    "defaultSize": {
      "height": 140,
      "width": 387
    }
  },
  "root": {
    "children": [
      {
        "children": [
          {
            "children": [
              {
                "meta": {
                  "name": "Label"
                },
                "position": {
                  "grow": 1
                },
                "props": {
                  "style": {
                    "marginRight": "8px"
                  },
                  "text": "Enter Accumulator Name:",
                  "textStyle": {
                    "fontWeight": "bold",
                    "textAlign": "center"
                  }
                },
                "type": "ia.display.label"
              }
            ],
            "meta": {
              "name": "Title"
            },
            "props": {
              "style": {
                "overflow": "hidden"
              }
            },
            "type": "ia.container.flex"
          },
          {
            "children": [
              {
                "children": [
                  {
                    "events": {
                      "dom": {
                        "onClick": {
                          "config": {
                            "script": "\tself.props.style.classes \u003d gpa.frontEnd.localUI.Constants.TEXT_NORMAL\n\tself.getSibling(\"ValidationIcon\").position.display \u003d False\n\tself.parent.parent.getChild(\"ErrorValidation\").position.display \u003d False"
                          },
                          "scope": "G",
                          "type": "script"
                        }
                      }
                    },
                    "meta": {
                      "name": "TextField"
                    },
                    "position": {
                      "basis": "150px",
                      "grow": 1
                    },
                    "propConfig": {
                      "props.text": {
                        "onChange": {
                          "enabled": null,
                          "script": "\tif previousValue !\u003d currentValue:\n\t\t\tself.parent.parent.getChild(\"ErrorValidation\").position.display \u003d False\t"
                        }
                      }
                    },
                    "props": {
                      "placeholder": "...",
                      "style": {
                        "classes": "TextFields/TextField"
                      }
                    },
                    "type": "ia.input.text-field"
                  },
                  {
                    "meta": {
                      "name": "ValidationIcon"
                    },
                    "position": {
                      "basis": "25px",
                      "display": false
                    },
                    "props": {
                      "params": {
                        "Icon": "material/error",
                        "Type": "fail"
                      },
                      "path": "GlobalComponents/Icons/IconMain"
                    },
                    "type": "ia.display.view"
                  }
                ],
                "meta": {
                  "name": "Content"
                },
                "position": {
                  "basis": "40px",
                  "shrink": 0
                },
                "type": "ia.container.flex"
              },
              {
                "children": [
                  {
                    "meta": {
                      "name": "Label"
                    },
                    "position": {
                      "basis": "419px",
                      "display": false
                    },
                    "props": {
                      "style": {
                        "classes": "TextFields/ErrorText"
                      },
                      "text": "Please check for valid input"
                    },
                    "type": "ia.display.label"
                  }
                ],
                "meta": {
                  "name": "ErrorValidation"
                },
                "position": {
                  "basis": "40px",
                  "display": false,
                  "grow": 1
                },
                "type": "ia.container.flex"
              }
            ],
            "meta": {
              "name": "Input"
            },
            "position": {
              "basis": "58.6px"
            },
            "propConfig": {
              "position.display": {
                "binding": {
                  "config": {
                    "path": "view.params.type"
                  },
                  "transforms": [
                    {
                      "fallback": true,
                      "inputType": "scalar",
                      "mappings": [
                        {
                          "input": "add",
                          "output": true
                        },
                        {
                          "input": "remove",
                          "output": false
                        }
                      ],
                      "outputType": "scalar",
                      "type": "map"
                    }
                  ],
                  "type": "property"
                }
              }
            },
            "props": {
              "direction": "column"
            },
            "type": "ia.container.flex"
          }
        ],
        "meta": {
          "name": "Label"
        },
        "position": {
          "grow": 1
        },
        "props": {
          "direction": "column"
        },
        "type": "ia.container.flex"
      },
      {
        "children": [
          {
            "children": [
              {
                "events": {
                  "dom": {
                    "onClick": {
                      "config": {
                        "script": "\ttry:\n\t    # Grabs values from inputs\n\t    inventoryname \u003d self.view.custom.InventoryName\n\t    siteid \u003d self.view.custom.SiteId\n\t    logger \u003d system.util.getLogger(\u0027tnt_add_inventory\u0027)\n\t    # Check if parameters are empty and raise exceptions if they are\n\t    if len(inventoryname) \u003c\u003d0:\n\t\t\tif inventory \u003c\u003d0: self.parent.parent.parent.getChild(\"Inventory\").getChild(\"Input\").getChild(\"ErrorValidation\").getChild(\"Label\").position.display \u003d True\n\t\t\tif len(label) \u003d\u003d 0: self.parent.parent.parent.getChild(\"Label\").getChild(\"Input\").getChild(\"ErrorValidation\").getChild(\"Label\").position.display \u003d True\n\t\t\tif len(location) \u003d\u003d 0: self.parent.parent.parent.getChild(\"Location\").getChild(\"Input\").getChild(\"ErrorValidation\").position.display \u003d True\n\t\t\traise Exception(\u0027Inventory Name is Empty Please try again\u0027)\n\t        \n\t    if len(inventoryname) \u003e 0:\n\t\t\tres \u003d mes.trace.sp.addAccumulator(inventoryname, siteid)\n\t\t\tsystem.perspective.print(res)\n\t\t\tsystem.perspective.print(\"sending data\")\n\t\t\tsystem.perspective.closePopup(self.view.params.ModalName)\n\t\n\t    messageType \u003d \u0027refreshTable\u0027\n\t    payload \u003d {}\n\t    system.perspective.sendMessage(messageType, payload, scope \u003d \u0027session\u0027)\n\t    system.perspective.sendMessage(\u0027refreshInventoryTree\u0027, payload, scope \u003d \u0027session\u0027)\n\texcept Exception as e:\n\t    msg \u003d \u0027There was an error: \u0027 + str(e)\n\t    logger.warn(msg)\n\t    raise e"
                      },
                      "scope": "G",
                      "type": "script"
                    }
                  }
                },
                "meta": {
                  "name": "SaveButton"
                },
                "position": {
                  "grow": 1
                },
                "props": {
                  "params": {
                    "Label": "Save",
                    "backgroundColor": "value",
                    "disabledPopup": {
                      "message": "Please sign in as quarterback to proceed.",
                      "messageType": "",
                      "payload": {},
                      "title": "Invalid Permissions"
                    },
                    "enabled": true,
                    "hover": true,
                    "iconPath": "material/add",
                    "isSelectable": false,
                    "label": "Add",
                    "selected": true,
                    "size": "142px",
                    "type": "normalsuccess"
                  },
                  "path": "GlobalComponents/Buttons/Button",
                  "style": {
                    "marginRight": "8px"
                  }
                },
                "type": "ia.display.view"
              }
            ],
            "meta": {
              "name": "Save"
            },
            "position": {
              "basis": "50%",
              "grow": 1
            },
            "type": "ia.container.flex"
          },
          {
            "children": [
              {
                "events": {
                  "dom": {
                    "onClick": {
                      "config": {
                        "script": "\tsystem.perspective.closePopup(self.view.params.ModalName)"
                      },
                      "scope": "G",
                      "type": "script"
                    }
                  }
                },
                "meta": {
                  "name": "CancelButton"
                },
                "position": {
                  "grow": 1
                },
                "props": {
                  "params": {
                    "IconPath": "material/cancel",
                    "Label": "Cancel",
                    "backgroundColor": "value",
                    "disabledPopup": {
                      "message": "Please sign in as quarterback to proceed.",
                      "messageType": "",
                      "payload": {},
                      "title": "Invalid Permissions"
                    },
                    "enabled": true,
                    "hover": true,
                    "isSelectable": false,
                    "label": "Cancel",
                    "selected": true,
                    "size": "value",
                    "type": "normalfail"
                  },
                  "path": "GlobalComponents/Buttons/Button"
                },
                "type": "ia.display.view"
              }
            ],
            "meta": {
              "name": "Cancel"
            },
            "position": {
              "basis": "50%",
              "grow": 1
            },
            "props": {
              "direction": "column"
            },
            "type": "ia.container.flex"
          }
        ],
        "meta": {
          "name": "Footer"
        },
        "position": {
          "grow": 1
        },
        "type": "ia.container.flex"
      }
    ],
    "meta": {
      "name": "root"
    },
    "props": {
      "direction": "column",
      "style": {
        "classes": "Global/MarginAll"
      }
    },
    "type": "ia.container.flex"
  }
}